<%- include("partials/header"); -%>

<div class="content">
  <h1>Today is <%=date %> </h1>
  <p><%= startingContent %></p>
  <hr style="border-top: 1px solid #353935" />

  <% contents.forEach((post)=>{ %>
  <div id="single-post" >
    <form action="/posts/<%= post.title %>" method="post">
      <input 
      type="hidden" name="id" value=<%=post.id %> >
      <h3 style="display: inline">
        <%=post.title %>
        <h4 style="display: inline">- written at <%=post.date %></h4>
      </h3>
      <p>
        <%=post.content.substring(0,200) + "..." %>
        <button type="submit" class="btn-expand">
        <p>read more</p>
        </button>
      </p>
    </form>
  </div>
  <% }); %>
  <hr style="border-top: 1px solid #353935" />
  <button type="button" class="btn btn btn-primary" style="margin-top: 1rem;" onclick="location.href='/compose'">
    + New Post
  </button>
</div>
<%- include("partials/footer"); -%>
