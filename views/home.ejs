<%- include("partials/header"); -%>

<div class="content">
  <h1>Hi <%= userEmail %></h1>
  <h2>Today is <%=date %> </h2>
  <p><%= startingContent %></p>
  <hr style="border-top: 1px solid #353935" />

  <% contents.forEach((post)=>{ %>
  <div id="single-post" >
    <form action="/posts/<%= post.title %>" method="POST">
      <input type="hidden" name="id" value=<%=post.id %> >
      <h3 style="display: inline">
        <%=post.title %>
        <h4 style="display: inline">- written at <%=post.date %></h4>
      </h3>
      <p>
        <%=post.content.substring(0,200) + "..." %>
        <button type="submit" class="btn-expand" name= "userEmail" value=<%= userEmail %>>
        <p>read more</p>
        </button>
      </p>
    </form>
    <hr style="border-top: 1px solid #353935" />
  </div>
  <% }); %>
  <div>
  <form action="/compose" method="GET">
    <button type="submit" class="btn btn btn-primary" style="margin-top: 1rem;"  name= "userEmail" value=<%= userEmail %>>+ New Post</button>
  </form>
  </div>
</div>
<%- include("partials/footer"); -%>
